{
	"extends": ["eslint:recommended", "plugin:react/recommended"],

	"env": {
		"es6": true,

		"browser": true
	},

	"plugins": ["react"],

	"parserOptions": {
		"sourceType": "module",

		"ecmaFeatures": {
			"jsx": true
		},

		"ecmaVersion": 2021
	},
	"rules": {
		"react/react-in-jsx-scope": "off",
		"react/prop-types": "off",
		"no-mixed-spaces-and-tabs": "off",
		"no-unused-vars": "off"
	}
}
